<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="513dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
               >

                <Button
                    android:id="@+id/Billpayment"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Bill"
                    android:textColor="@color/black"
                    app:backgroundTint="#D4DAFF"
                    app:cornerRadius="0dp"
                    app:drawableTopCompat="@drawable/bill" />

                <Button
                    android:id="@+id/FinancePyament"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Finance"
                    android:textColor="@color/black"
                    app:backgroundTint="#D4FFDA"
                    app:cornerRadius="0dp"
                    app:drawableTopCompat="@drawable/finance" />

                <Button
                    android:id="@+id/AcademicFee"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Acadamic"
                    android:textColor="@color/black"
                    app:backgroundTint="#FFE7D4"
                    app:cornerRadius="0dp"
                    app:drawableTopCompat="@drawable/academic" />

                <Button
                    android:id="@+id/Helthcard"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Helth"
                    android:textColor="@color/black"
                    app:backgroundTint="#FFD4F8"
                    app:cornerRadius="0dp"
                    app:drawableTopCompat="@drawable/helthicon" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewExpenses"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:gravity="start"
                android:text="Add New Expenses"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/linearLayoutType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/textViewExpensesType"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Type"

                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/expense_type_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textViewExpensesType"
                    android:hint="Expenses Type" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayoutDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                tools:ignore="ExtraText">

                <TextView
                    android:id="@+id/textViewDateTime"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Date &amp; Time"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/date_time_edit_text"
                    android:layout_width="236dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textViewDateTime"
                    android:focusable="false"
                    android:hint="Select Date"
                    android:inputType="none" />

                <ImageButton
                    android:id="@+id/date_picker_button"
                    android:layout_width="29dp"
                    android:layout_height="32dp"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/date_time_edit_text"
                    android:src="@drawable/calender" /> <!-- Replace with your calendar icon -->
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayoutAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/textViewAmount"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Amount"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/amount_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textViewAmount"
                    android:hint="Amount"
                    android:inputType="numberDecimal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearLayoutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text="Description"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/description_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/textViewDescription"
                    android:hint="@string/description"
                    android:inputType="textLongMessage" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayoutButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submit_expenses"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:text="@string/submit" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:text="@string/cancel"
                    app:backgroundTint="#AE0A41" />

            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
